{
  "$id": "https://spectramind-v50.org/schemas/diagnostics.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Diagnostics Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "model", "datasets", "checks"],
  "properties": {
    "run_id": { "type": "string" },
    "model": {
      "type": "object",
      "required": ["arch", "checkpoint"],
      "additionalProperties": false,
      "properties": {
        "arch": { "type": "string" },
        "checkpoint": { "type": "string" },
        "params": { "type": "object", "additionalProperties": true }
      }
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "n_samples"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "split": { "type": "string", "enum": ["train", "val", "test", "holdout"] },
          "n_samples": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "fft": {
      "type": "object",
      "description": "Optional FFT summaries per channel.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "freqs": { "type": "array", "items": { "type": "number" } },
          "power": { "type": "array", "items": { "type": "number", "minimum": 0 } }
        },
        "required": ["freqs", "power"],
        "additionalProperties": false
      }
    },
    "umap": {
      "type": "object",
      "description": "2D embeddings for qualitative inspection.",
      "properties": {
        "points": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "number" }
          }
        },
        "labels": { "type": "array", "items": { "type": ["number", "string"] } }
      },
      "required": ["points"]
    },
    "shap": {
      "type": "object",
      "description": "Feature importance summaries.",
      "properties": {
        "mean_abs_shap": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    },
    "checks": {
      "type": "object",
      "description": "Symbolic/physics checks summarised.",
      "required": ["nonnegativity", "smoothness", "fgs1_weighting"],
      "additionalProperties": false,
      "properties": {
        "nonnegativity": { "type": "boolean" },
        "smoothness": { "type": "number", "minimum": 0 },
        "fgs1_weighting": { "type": "number", "minimum": 0 }
      }
    }
  }
}
