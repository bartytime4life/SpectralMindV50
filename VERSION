# -----------------------------------------------------------------------------
# Version bumping (syncs VERSION â†’ pyproject.toml, commits, and tags)
# -----------------------------------------------------------------------------
.PHONY: version
version:
	@set -euo pipefail; \
	ver="$$(tr -d '[:space:]' < VERSION)"; \
	if [ -z "$$ver" ]; then echo "âŒ ERROR: VERSION file is empty"; exit 1; fi; \
	pep_re='^[0-9]+(\.[0-9]+){2}([abrc][0-9]+)?(\.post[0-9]+)?(\.dev[0-9]+)?$$'; \
	if ! printf '%s' "$$ver" | grep -Eq "$$pep_re"; then \
	  echo "âš ï¸  VERSION '$$ver' is not a strict PEP 440 form (e.g., 0.1.0, 1.2.3rc1, 1.2.3.post1, 1.2.3.dev1)"; \
	fi; \
	pyproject="pyproject.toml"; \
	if [ ! -f "$$pyproject" ]; then echo "âŒ ERROR: $$pyproject not found"; exit 1; fi; \
	echo "ğŸ”„ Setting version to $$ver"; \
	python - "$$pyproject" "$$ver" <<'PY' || { echo "âŒ ERROR: failed to update pyproject.toml"; exit 1; }
import io, re, sys
path, new = sys.argv[1], sys.argv[2]
with io.open(path, "r", encoding="utf-8") as f:
    lines = f.readlines()
in_project = False
found = False
for i, line in enumerate(lines):
    if line.strip().startswith("["):
        in_project = line.strip() == "[project]"
    if in_project and re.match(r'^\s*version\s*=\s*".*"\s*$', line):
        old = line.strip()
        lines[i] = re.sub(r'^\s*version\s*=\s*".*"\s*$', f'version = "{new}"', line)
        print(f"   previous: {old}")
        print(f"   updated : {lines[i].strip()}")
        found = True
        break
if not found:
    sys.stderr.write("version key not found under [project]\n")
    sys.exit(2)
with io.open(path, "w", encoding="utf-8", newline="") as f:
    f.writelines(lines)
PY
	# Stage changes
	git add VERSION pyproject.toml; \
	# Commit if needed
	if ! git diff --cached --quiet; then \
	  git commit -m "chore: set version $$ver"; \
	else \
	  echo "â„¹ï¸  No changes to commit"; \
	fi; \
	# Create annotated tag if missing
	if git rev-parse "v$$ver" >/dev/null 2>&1; then \
	  echo "âš ï¸  Tag v$$ver already exists"; \
	else \
	  git tag -a "v$$ver" -m "Release v$$ver" || { echo "âŒ ERROR: failed to create tag"; exit 1; }; \
	  echo "ğŸ·ï¸  Created tag v$$ver"; \
	fi
