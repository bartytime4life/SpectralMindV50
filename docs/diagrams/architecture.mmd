  %% STYLES
  %% -----------------------------
  classDef raw fill:#0b3d91,stroke:#0b3d91,color:#fff;
  classDef enc fill:#0a6,stroke:#0a6,color:#fff;
  classDef fusion fill:#a60,stroke:#a60,color:#fff;
  classDef dec fill:#444,stroke:#444,color:#fff;
