%% docs/diagrams/architecture.mmd
%% SpectraMind V50 — Architecture Overview (Mermaid)
%% Renders on GitHub and MkDocs (with mermaid plugin)

flowchart TD

  %% ─────────────────────────────────────────────────────────────
  %% L1: Orchestration & Config
  %% ─────────────────────────────────────────────────────────────
  A["User / CI\n(typer CLI: spectramind)"] -->|invokes| B["Hydra Compose\n(configs/*)"]
  B --> C["Run Context\n(seed, device, env)"]

  subgraph CFG[Hydra Config Tree]
    direction LR
    CFG1["env/ (local,kaggle,hpc,ci)"]
    CFG2["data/ (nominal,kaggle,debug)"]
    CFG3["calib/ (adc,dark,flat,cds,photometry,trace,phase)"]
    CFG4["model/ (fgs1,airs,fusion,decoder)"]
    CFG5["training/ (optim, sched, precision, es)"]
    CFG6["loss/ (smooth, nonneg, band, calibration)"]
    CFG7["logger/ (jsonl,csv,wandb)"]
  end

  B -. defaults+overrides .-> CFG

  %% ─────────────────────────────────────────────────────────────
  %% L2: DVC Pipeline Stages
  %% ─────────────────────────────────────────────────────────────
  subgraph DVC[Reproducible Pipeline (DVC)]
    direction TB
    P1["calibrate\nADC→dark→flat→CDS→photometry→trace→phase"] --> P2["tensors\n(feature-ready, physics-aligned)"]
    P2 --> P3["train\n(dual-encoder + heteroscedastic decoder)"]
    P3 --> P4["predict\n(μ, σ per bin; 283 bins)"]
    P4 --> P5["diagnose\n(FFT, UMAP/t-SNE, SHAP, rules)"]
    P4 --> P6["submit\n(schema-checked CSV/ZIP + manifest)"]
  end

  C --> P1

  %% ─────────────────────────────────────────────────────────────
  %% L3: Model Blocks
  %% ─────────────────────────────────────────────────────────────
  subgraph M["Model Architecture"]
    direction LR

    subgraph E1["FGS1 Encoder"]
      E1a["Denoise / Bin / Downsample"]
      E1b["Temporal Model (SSM/Mamba)"]
    end

    subgraph E2["AIRS Encoder"]
      E2a["Spectral CNN/GNN\n(wavelength-structured)"]
    end

    FUS["Fusion\n(concat / cross-attn)"]
    DEC["Decoder\n(heteroscedastic head → μ, σ)"]
  end

  %% tensors → encoders → fusion → decoder
  P2 --> E1
  P2 --> E2
  E1 --> FUS
  E2 --> FUS
  FUS --> DEC
  DEC --> P4

  %% ─────────────────────────────────────────────────────────────
  %% L4: Constraints & Calibration
  %% ─────────────────────────────────────────────────────────────
  subgraph PHY["Physics-Aware Constraints"]
    L1c["Smoothness Prior"]
    L2c["Non-negativity of μ"]
    L3c["Band Coherence / Priors"]
    L4c["σ Calibration (Temp Scaling)"]
  end

  PHY -. loss terms / checks .- DEC
  PHY -. validation .- P5

  %% ─────────────────────────────────────────────────────────────
  %% L5: Artifacts, Lineage & CI
  %% ─────────────────────────────────────────────────────────────
  subgraph ART["Lineage & Artifacts"]
    direction TB
    A1["artifacts/configs/run.yaml\n(Hydra snapshot)"]
    A2["artifacts/checkpoints/model.ckpt"]
    A3["artifacts/predictions/{mu.csv, sigma.csv}"]
    A4["artifacts/reports/diagnostics_dashboard.html"]
    A5["dist/submission.{csv,zip,json}\n(+ checksums manifest)"]
    A6["logs/events.jsonl\n(structured run log)"]
  end

  %% provenance edges
  B --> A1
  P3 --> A2
  P4 --> A3
  P5 --> A4
  P6 --> A5
  C --> A6

  %% ─────────────────────────────────────────────────────────────
  %% L6: Guardrails & Platform
  %% ─────────────────────────────────────────────────────────────
  subgraph KG["Kaggle Constraints"]
    direction TB
    KG1["No Internet"]
    KG2["≤ 9h GPU / 30GB RAM"]
    KG3["Inputs via /kaggle/input/\n(ariel-data-challenge-2025)"]
    KG4["requirements-kaggle.txt only"]
  end

  subgraph CI["CI/CD & DVC"]
    CI1["Lint/Type (pre-commit)"]
    CI2["Determinism Checks"]
    CI3["SBOM & Pinning"]
    CI4["dvc repro / cache"]
  end

  A -. run on Kaggle .- KG
  DVC -. caching & hashes .- CI4
  CI1 --> A6
  CI2 --> A6
  CI3 --> A5

  %% ─────────────────────────────────────────────────────────────
  %% Visual Notes
  %% ─────────────────────────────────────────────────────────────
  classDef dim fill:#eef,stroke:#446,stroke-width:1px;
  classDef hot fill:#ffe,stroke:#884,stroke-width:1px;
  classDef red fill:#fee,stroke:#a66,stroke-width:1px;

  class DVC,CFG,ART,CI,KG dim
  class PHY hot
  class P6,A5 red
