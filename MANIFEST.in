# MANIFEST.in â€” SpectraMind V50
# Ensure non-Python runtime assets (configs, schemas, diagrams, docs, etc.)
# are included in source distributions, matching wheel package-data.

# -------------------------------------------------------------------
# Core runtime assets (Hydra configs, JSON schemas, diagrams)
# -------------------------------------------------------------------
recursive-include src/spectramind/configs *.yml *.yaml
recursive-include src/spectramind/schemas *.json
recursive-include src/spectramind/assets/diagrams *.mmd *.svg *.png

# -------------------------------------------------------------------
# Documentation & guides
# -------------------------------------------------------------------
include README.md LICENSE VERSION CHANGELOG.md
recursive-include docs *.md *.yml *.yaml *.svg *.png

# -------------------------------------------------------------------
# Repo metadata & CI
# -------------------------------------------------------------------
include pyproject.toml setup.cfg
include .editorconfig .pre-commit-config.yaml
recursive-include .github/workflows *.yml

# -------------------------------------------------------------------
# Scripts (CLI helpers, Kaggle, diagrams)
# -------------------------------------------------------------------
recursive-include scripts *.sh
recursive-include bin *.sh

# -------------------------------------------------------------------
# Exclusions (compiled, temp, binary junk)
# -------------------------------------------------------------------
global-exclude *.py[cod] __pycache__ *.so *.dylib *.dll *.bak *.tmp
